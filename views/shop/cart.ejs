<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (prods.length > 0) { %>
                <div class="grid">
                    <% for (let product of prods) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title">
                                    <%= productDetails.find(p => p.id === product.id).title %>
                                </h1>
                            </header>
                            <div class="card__image">
                                <img src="<%= productDetails.find(p => p.id === product.id).imageUrl %>" alt="<%= productDetails.find(p => p.id === product.id).title %>">
                            </div>
                            <p class="product__description">
                                <%= productDetails.find(p => p.id === product.id).description %>
                            </p>
                            <div class="card__content">
                                <h2 class="product__price"> Price: 
                                    <%= productDetails.find(p => p.id === product.id).price %>
                                </h2>
                                <h2 class="product__price"> Quantity: 
                                    <%= product.qty %>
                                </h2>
                            </div>
                            <div class="card__actions">
                                <form action="/cart/delete" method="POST">
                                    <input type="hidden" value= "<%= product.id %>" name= "productId">
                                    <button class="btn" type="submit">Delete</button>
                                </form>
                            </div>
                           
                        </article>
                        <% } %>
                        <div>
                            <h1>Total Price: <%= totalPrice %></h1>
                        </div>
                </div>
                <% } else { %>
                    <h1>No Products Found!</h1>
                    <% } %>
        </main>        
        <%- include('../includes/end.ejs') %>